<h1 class="redact">Редактировать {{course.title}}</h1>

<section class="section-add">
   <section class="section-add_container">
      <form action="/course/edit" method="POST">
         <input placeholder="НАЗВАНИЕ" type="text" class="input-add_1" name="title" value="{{course.title}}">
         <input placeholder="ИНФОРМАЦИЯ" type="text" class="input-add_1" name="info" value="{{course.info}}">
               <input placeholder="ЦЕНА" type="text" class="input-add_1" name="price" value="{{course.price}}">
               <input placeholder="URL КАРТИНКИ" type="text" class="input-add_1" name="img" value="{{course.img}}">
         <input type="submit" value="Редактировать" class="input-add_2">
         <input type="hidden" name="id" value="{{course.id}}">
      </form>
   </section>
</section>